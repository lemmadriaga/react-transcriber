{
  "manifest_version": 3,
  "name": "Video Transcriber Pro",
  "version": "1.0.0",
  "description": "High-accuracy video transcription for Google Drive videos",
  "permissions": ["activeTab", "storage", "scripting", "tabs"],
  "host_permissions": [
    "https://drive.google.com/*",
    "https://docs.google.com/*",
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://drive.google.com/*", "https://docs.google.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Video Transcriber Pro"
  },
  "web_accessible_resources": [
    {
      "resources": ["transcription-overlay.html", "icons/*"],
      "matches": ["https://drive.google.com/*", "https://docs.google.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
